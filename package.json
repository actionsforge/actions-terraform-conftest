{
  "name": "actions-terraform-conftest",
  "version": "1.0.0",
  "description": "Reusable GitHub Action to run Conftest for Terraform",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage --run",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "keywords": [
    "github-actions",
    "terraform",
    "conftest",
    "opa",
    "policy"
  ],
  "author": "Actions Forge",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.2",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
